<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ListView?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="InventoryController">
    <center>
        <AnchorPane prefHeight="500.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                <Text layoutX="200.0" layoutY="36.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Input Info for Inventory:">
                    <font>
                        <Font name="Arial" size="18.0" fx:id="x1" />
                    </font>
                </Text>
                <Button fx:id="add" layoutX="100.0" layoutY="468.0" mnemonicParsing="false" onAction="#add" text="Add" />
                <Button fx:id="back" layoutX="370.0" layoutY="140.0" mnemonicParsing="false" onAction="#backToMain" text="Back" />

                <Label layoutX="100.0" layoutY="70.0" text="Year:" />
                <TextField fx:id="year" layoutX="100.0" layoutY="90.0" prefHeight="26.0" prefWidth="150.0" promptText="Input year" />

                <Label layoutX="100.0" layoutY="120.0" text="Model:" />
                <TextField fx:id="model" layoutX="100.0" layoutY="140.0" prefHeight="26.0" prefWidth="150.0" promptText="Input model" />

                <Label layoutX="100.0" layoutY="170.0" text="Make:" />
                <TextField fx:id="make" layoutX="100.0" layoutY="190.0" prefHeight="26.0" prefWidth="150.0" promptText="Input date" />

                <Label layoutX="100.0" layoutY="220.0" text="Condition:" />
                <TextField fx:id="condition" layoutX="100.0" layoutY="240.0" prefHeight="26.0" prefWidth="150.0" promptText="New/Good/Fair/Poor" />

                <Label layoutX="100.0" layoutY="270.0" text="Color:" />
                <TextField fx:id="color" layoutX="100.0" layoutY="290.0" prefHeight="26.0" prefWidth="150.0" promptText="Input color" />

                <Label layoutX="100.0" layoutY="320.0" text="Type(Sedan/Two-Door/SUV):" />
                <TextField fx:id="type" layoutX="100.0" layoutY="340.0" prefHeight="26.0" prefWidth="150.0" promptText="Input type" />

                <Label layoutX="100.0" layoutY="370.0" text="Miles:" />
                <TextField fx:id="miles" layoutX="100.0" layoutY="390.0" prefHeight="26.0" prefWidth="150.0" promptText="Input miles" />

                <Label layoutX="100.0" layoutY="420.0" text="Price:" />
                <TextField fx:id="price" layoutX="100.0" layoutY="438.0" prefHeight="26.0" prefWidth="150.0" promptText="Input price" />


                <Button fx:id="viewInfo" layoutX="370.0" layoutY="90.0" mnemonicParsing="false" onMouseClicked="#viewInfo" prefHeight="27.0" prefWidth="107.0" text="View Info" />

            </children>

        </AnchorPane>
    </center>
    <top>
        <Pane prefHeight="50.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                <Text layoutX="20.0" layoutY="31.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Car Salesman System">
                    <font>
                        <Font name="Helvetica" size="24.0" />
                    </font>
                </Text>
            </children>
        </Pane>
    </top>
</BorderPane>