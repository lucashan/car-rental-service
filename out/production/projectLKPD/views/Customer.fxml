<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ListView?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CustomerController">
    <center>
        <AnchorPane prefHeight="500.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                <Text layoutX="200.0" layoutY="36.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Input Info for Customer:">
                    <font>
                        <Font name="Arial" size="18.0" fx:id="x1" />
                    </font>
                </Text>
                <Button fx:id="add" layoutX="100.0" layoutY="250.0" mnemonicParsing="false" onAction="#add" text="Add" />
                <Button fx:id="back" layoutX="100.0" layoutY="350.0" mnemonicParsing="false" onAction="#backToMain" text="Back" />

                <Label layoutX="100.0" layoutY="70.0" text="Customer Name:" />
                <TextField fx:id="custName" layoutX="100.0" layoutY="90.0" prefHeight="26.0" prefWidth="150.0" promptText="Input name" />

                <Label layoutX="100.0" layoutY="120.0" text="Customer Address:" />
                <TextField fx:id="custAddr" layoutX="100.0" layoutY="140.0" prefHeight="26.0" prefWidth="150.0" promptText="Input address" />

                <Label layoutX="100.0" layoutY="170.0" text="Phone Number:" />
                <TextField fx:id="custNumb" layoutX="100.0" layoutY="190.0" prefHeight="26.0" prefWidth="150.0" promptText="Input phone number" />

               <Button fx:id="viewInfo" layoutX="100.0" layoutY="300.0" mnemonicParsing="false" onMouseClicked="#viewInfo" prefHeight="27.0" prefWidth="107.0" text="View Info" />

            </children>

        </AnchorPane>
    </center>
    <top>
        <Pane prefHeight="50.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                <Text layoutX="20.0" layoutY="31.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Car Salesman System">
                    <font>
                        <Font name="Helvetica" size="24.0" />
                    </font>
                </Text>
            </children>
        </Pane>
    </top>
</BorderPane>