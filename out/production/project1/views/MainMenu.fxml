<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="MainMenuController">
  <center>
    <AnchorPane prefHeight="500.0" prefWidth="600.0" BorderPane.alignment="CENTER">
      <children>
        <Text layoutX="256.0" layoutY="36.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Main Menu">
          <font>
            <Font name="Arial" size="18.0" fx:id="x1" />
          </font>
        </Text>
        <Text font="$x1" layoutX="100.0" layoutY="70.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Please select an option:" />
        <Button fx:id="addToInventory" layoutX="100.0" layoutY="123.0" mnemonicParsing="false" onAction="#addToInventory" text="Inventory" />
        <Button fx:id="addEmployee" layoutX="100.0" layoutY="159.0" mnemonicParsing="false" onAction="#addEmployee" text="Employee" />
        <Button fx:id="addCustomer" layoutX="100.0" layoutY="195.0" mnemonicParsing="false" onAction="#addCustomer" text="Customer" />
        <Button fx:id="recordSale" layoutX="100.0" layoutY="232.0" mnemonicParsing="false" onAction="#recordSale" text="Sale" />
        <Button fx:id="exitMenu" layoutX="100.0" layoutY="420.0" mnemonicParsing="false" onAction="#exit" text="Exit menu" />
      </children>
    </AnchorPane>
  </center>
  <top>
    <Pane prefHeight="50.0" prefWidth="600.0" BorderPane.alignment="CENTER">
      <children>
        <Text layoutX="20.0" layoutY="31.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Car Salesman System">
          <font>
            <Font name="Helvetica" size="24.0" />
          </font>
        </Text>
      </children>
    </Pane>
  </top>
</BorderPane>
